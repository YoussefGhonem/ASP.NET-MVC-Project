@model IEnumerable< Jop_Offers_Website.Models.Jop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table  table-stripped table-bordered table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jopTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jopContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jopImg)

        </th>
        <th></th>
    </tr>
   
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jopTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jopContent)
            </td>
            <td>
              
                <img src="@Url.Content(@item.jopImg )" height="100px"/>
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@model Jop_Offers_Website.Models.ApplyForJop

@{
    ViewBag.Title = "EditeJop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditeJop</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ApplyForJop</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.JopId)

    <div class="form-group">
        @Html.LabelFor(model => model.jop, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.jop.jopTitle
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Msg, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Msg, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Msg, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ApplyDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.ApplyDate
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "GetJops")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

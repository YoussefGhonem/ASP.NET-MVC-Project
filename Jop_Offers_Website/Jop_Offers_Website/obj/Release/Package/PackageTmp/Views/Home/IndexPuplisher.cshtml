@model IEnumerable<Jop_Offers_Website.Models.ListUserOfJops>

@{
    ViewBag.Title = "IndexPuplisher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexPuplisher</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var gr in Model)
{
<h1>@gr.JopTitle</h1>
    <table class="table table-bordered table-hover" >
        <tr>
            <th>
               User Name
            </th>
           
            <th>
                Message
            </th>

            <th>
                Apply Date
            </th>

            
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.user.UserName)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.Msg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyDate)
                </td>


            </tr>
        }

    </table>
}






